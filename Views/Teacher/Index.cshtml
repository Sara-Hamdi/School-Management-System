@model List<Teacher>
<a asp-controller="Teacher" asp-action="Create" class="btn btn-outline-success">Add New Teacher</a>
<h1 class="text-center">Teachers</h1>
<form method="get" asp-controller="Teacher" asp-action="Index">
    <label>Name : </label><input name="searchString"/>
    <label>Subject : </label><input name="subject" />
    <input type="submit" value="Search"/>
    <input type="submit" value="All" asp-action="Index" />
</form>


<table class="table">
  <thead>
      <tr class="table-row">
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Subject</th>
          <th></th>
      </tr>
      </thead>
        <tbody>

      @foreach(var teacher in Model)
        {
            <tr class="table-row">
                <td>
                    @teacher.FirstName
                </td>
                <td>
                    @teacher.LastName
                </td>
                <td>
                    @teacher.Email
                </td>
                <td>
                    @teacher.PhoneNumber
                </td>
                <td>
                    @teacher.subject
                </td>
                <td>
                    <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-success">Edit</a>
                    <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Delete</a>
                    
                </td>
              
                
                </tr>
        }
       
          
      </tbody>
  















</table>