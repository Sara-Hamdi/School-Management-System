@model Teacher
<form method="post" asp-action="Edit" asp-controller="Teacher">
    <input asp-for="Id" hidden />
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />

    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="subject" class="form-label"></label>
        <select asp-items="ViewBag.subjects" asp-for="subject"></select>
    </div>
    <button type="submit" class="btn btn-info form-control">Save</button>










</form>