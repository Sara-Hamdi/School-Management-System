@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    
    <div class="container">
        <div class="container row g-2">
         
                <div class="col-6">
                <div class="p-3 card text-center"  style="background-color:aquamarine">
                     <div class="d-flex justify-content-center">
                         <img src="~/lib/Images/student.png" style="height:100px"/>
                        <div>
                            <h1>@ViewData["numOfStudents"]</h1>
                            <a asp-controller="Student" asp-action="Index" class="btn btn-primary">Students</a>
                           
                     
                        </div>
                        </div>
                    </div>
                </div>
            <div class="col-6">
                <div class="p-3 card text-center" style="background-color:burlywood">
                    <div class="d-flex justify-content-center">
                    
                        <img src="~/lib/Images/teacher1.png" style="height:100px" />
                   
                    <div>
                        <h1>@ViewData["numOfTeachers"]</h1>
                        <a asp-controller="Teacher" asp-action="Index" class="btn btn-primary">Teachers</a>

                    </div>
                    </div>
                    </div>
                </div>

            <div class="col-6">
                <div class="p-3 card text-center" style="background-color:darkgoldenrod">
                    <div class="d-flex justify-content-center">
                        <img src="~/lib/Images/books.png" style="height:100px" />
                        <div>
                            <h1>@ViewData["numOfSubjects"]</h1>
                            <a asp-controller="Subject" asp-action="Index" class="btn btn-primary">Subjects</a>


                        </div>
                    </div>
                </div>
            </div>
            </div>



           


        </div>

</div>

